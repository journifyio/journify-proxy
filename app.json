{
    "name": "journify-proxy",
    "hooks": {
        "prebuild": {
            "commands": [
                "gcloud auth configure-docker us-east1-docker.pkg.dev"
            ]
        },
        "postcreate":{
            "commands": [
                "gcloud domains verify journify-stage.dev",
                "gcloud beta run domain-mappings create --service $SERVICE_URL --domain proxy.journify-stage.dev"
            ]
        }
    }
}
